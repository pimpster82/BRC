{
  "rules": {
    "admins": {
      ".read": "auth != null",
      ".write": "root.child('admins').child(auth.uid).exists()"
    },
    "schedules": {
      ".read": true,
      ".write": "root.child('admins').child(auth.uid).exists()"
    },
    "yeartexts": {
      ".read": true,
      ".write": "root.child('admins').child(auth.uid).exists()"
    },
    "readingPlans": {
      ".read": true,
      "available": {
        "$planId": {
          ".write": "root.child('admins').child(auth.uid).exists() || (!data.exists() && auth != null)"
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
